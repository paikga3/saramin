$('.free_sort > a:not(.free_sort_on)').hover(function() {
	$(this).css("text-decoration", "underline");
}, function() {
	$(this).css("text-decoration", "none");
});

$('.free_sort > a').click(function() {
	$(this).next('form').trigger("submit");
	return false;
});

$('#free_numbering a').click(function() {
	$(this).next('form').trigger('submit');
	return false;
});